<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Posts</title>
    <%- include('../../imports'); -%>
</head>
<body>
    <%- include('../../navbar'); -%>

    <div class="container">
        <div class="row">
          <h1>administração de posts</h1>
        </div>
        <div class="row mb-2">
          <a href="/admin/posts/create" class="btn btn-success">Novo post</a>
        </div>
        <div class="row">
          <table class="table table-hover table-dark">
              <thead>
                <tr>
                  <th scope="col">Código</th>
                  <th scope="col">título</th>
                  <th scope="col">sla</th>
                  <th scope="col">sla</th>
                </tr>
              </thead>
              <tbody>
                <% posts.forEach((post) => {%>
                  <tr>
                      <th><%= post.id %></th>
                      <td><%= post.title %></td>
                      <td>Otto</td>
                      
                    </tr>
                <% }); %>
                
              </tbody>
          </table>


        </div>

    </div>

</body>
</html>